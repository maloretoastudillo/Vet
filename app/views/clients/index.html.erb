<p id="notice"><%= notice %></p>

<h3>Clientes</h3>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Teléfono</th>
      <th scope="col">e-mail</th>
      <th scope="col">Mascotas</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
    <tr>
      <th scope="row"><%= client.name %></th>
      <td><%= client.phone %></td>
      <td><%= client.email %></td>
      <td><%= client.pets.size %></td>
      <td><%= link_to 'Ver detalle', client %></td>
      <td><%= link_to 'Editar', edit_client_path(client) %></td>
      <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: "¿Está seguro de eliminar a #{client.name} del registro de clientes?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar nuevo cliente', new_client_path%>